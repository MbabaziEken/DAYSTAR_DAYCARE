doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title parents
  link(href='/assets/boostrap/css/boostrap.css')
  link(rel='stylesheet' href='/css/parents.css')
#main
  #container
    #rol
    h5 PARENTS FORM
    form.entry-form(action='/parents' method='POST')
      .input
        label(for='parents')  
        input.parents-text-form(type='text' placeholder='enteryourname' name='Parentsname')
      br
      .form-group
        label(for='parents')  
        input.parents-text-form(type='text' placeholder="enteryourbabbiesname" name='BabyName')
      br
      .form-group
        label(for='sitters-age')
        input.parents-text-form(type='number' placeholder='enteryourage' name='Age')
      br
      .form-group
        label(for='gender ')  
        select#gender(name='Gender')
          option(value='') GENDER
          option(value='male') male
          option(value='female') female
          option(value='other') other
      br
      .form-group
      label(for='NIN.no.')  
      input.parents-text-form(type='text' placeholder='enteryourNIN' name='nin')
      br
      .form-group
        label(for='location')  
        input.parents-text-form(type='text' placeholder='place of residence' name='Location')
      br
      .form-group
        label(for='contact')  
        input.parents-text-form(type='text' placeholder='CONTACT' name='Contact')
      br
      .form-group
        label(for='next-of-kin')  
        input.parents-text-form(type='text' placeholder='writeyournextofkin' name='NextOfKin')
      br
      .form-group
        label(for="next-of-kin's-contact")  
        input.parents-text-form(type='text' placeholder="theirphonenumber" name='NextOfKinsContact')
      br
      button.btn-primary register
