doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Payment Dash
  link(rel='stylesheet' href='/assets/bootstrap/css/bootstrap.css')
  link(rel='stylesheet' href='/css/babbieslist.css')
.dashboard
  #main
    #navbar
      ul 
       il
    h1  Sitters Payments Dashboard
table.table.table-striped.table-responsive
                    thead.bg-secondary
                        tr
                            th   NAME
                            th AMOUNT
                            th PAYMENT STATUS
                            th EDIT
                    tbody
                        if users.length
                        each user in users
                            tr
                                td #{user.fullName}
                                td #{user.amount}
                                td #{user.paymentStatus}
                                td 
                                  a.btn.btn-primary( href=`/sitterpaymentlist/${user._id}`) Edit

script(src='/js/paymentsupdate.js')
script(src='/assets/bootstrap/js/bootstrap.bundle.js')
