        input.babbies-text-form(type='text' placeholder='NEXT OF KIN' name='nextOfKin' id='NextOfKin' value='nextOfKin')
      br
      .form-group
        label(for='babby-number')  
        input.babbies-text-form(type='text' placeholder='BABBY NUMBER' name='idNo' id='IdNo' value='idNo')
      br
      .form-group
        label(for='allergies')  
        input.babbies-text-form(type='text' placeholder='ALLERGIES' name='allergies' id='Allergies' value='allergies')
      br
