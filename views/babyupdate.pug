doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Babbies
  link(href='/assets/boostrap/css/boostrap.css')
  link(rel='stylesheet' href='/css/babbies.css')

#main
  #container
    #rol
    h5 BABBIES FORM
    form#submit.entry-form(action='/babbies' method='POST')
      .input
        label(for='babbies-name')  
        input.babbies-text-form(type='text' placeholder='BABYNAME' name='babyName' id='Babyname' value='babyName')
      br
      .form-group
        label(for='babbies-age')
        input.babbies-text-form(type='number' placeholder='AGE' name='age' id='Age' value='age')
      br
      .form-group
        label(for='gender ')  
        select#gender(name='gender')
        if gender == ''
          option(value='' selected) GENDER 
        else 
          option(value='') GENDER
        if gender == 'male'
          option(value='male' selected) male
        else 
          option(value='male') male
        if gender == 'female'
          option(value='female' selected) female
        else 
          option(value='female') female
      br
      .form-group
        label(for='favorites')  
        input.babbies-text-form(type='text' placeholder='FAVORITES' name='favorites' id='Favorites' value='favorites')
      br
      .form-group
